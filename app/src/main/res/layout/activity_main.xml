<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mangu.personalcityhelper.ui.main.MainActivity">


    <ImageView
        android:id="@+id/id_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:contentDescription="@string/news"
        android:src="@drawable/ic_news"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/id_beach" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/news"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/id_news"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textViewNews"
        app:layout_constraintRight_toLeftOf="@+id/textViewBeach" />
    <ImageView
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:id="@+id/id_beach"
        android:contentDescription="@string/beach"
        android:src="@drawable/ic_beach"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/beach"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/id_beach"
        android:id="@+id/textViewBeach"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="53dp"
        android:layout_height="26dp"
        android:id="@+id/id_weather"
        android:src="@drawable/ic_weather"
        android:contentDescription="@string/weather"
        app:layout_constraintLeft_toRightOf="@+id/id_beach"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather"
        android:textStyle="bold|italic"

        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/id_weather"
        app:layout_constraintLeft_toRightOf="@+id/textViewBeach"
        android:id="@+id/textViewWeather"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:contentDescription="@string/calendar"
        android:src="@drawable/ic_calendar"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNews"
        app:layout_constraintLeft_toLeftOf="@+id/id_news"
        android:id="@+id/id_events" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCalendar"
        android:text="@string/calendar"
        android:textStyle="bold|italic"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/id_events"
        app:layout_constraintLeft_toLeftOf="@+id/textViewNews" />
    <com.mangu.personalcityhelper.ui.common.ErrorView
        android:id="@+id/view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:visibility="gone" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/change_language"
    android:id="@+id/btn_change_language"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
